<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/listViewItemTxt_dev_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:text="@string/txt_no_data"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/imageView_conn_endpoint_kind"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="33dp"
            android:layout_toLeftOf="@+id/listViewItemTxt_dev_name"
            android:fitsSystemWindows="false"
            android:src="@drawable/ic_action_important" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/listViewItemTxt_dev_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_margin="2dp"
            android:text="@string/txt_no_data"
            android:textColor="@color/hubMedium"
            android:textSize="15sp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone" >

        <TextView
            android:id="@+id/listViewItemTxt_dev_desc1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/listViewItemTxt_dev_desc_2"
            android:layout_alignBottom="@+id/listViewItemTxt_dev_desc_2"
            android:layout_alignParentLeft="true"
            android:text="@string/txt_no_data"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/listViewItemTxt_dev_desc_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/listViewItemTxt_dev_desc_3"
            android:layout_alignBottom="@+id/listViewItemTxt_dev_desc_3"
            android:layout_toRightOf="@+id/listViewItemTxt_dev_desc1"
            android:text="@string/txt_no_data"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/listViewItemTxt_dev_desc_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/listViewItemTxt_dev_desc_2"
            android:text="@string/txt_no_data"
            android:textSize="12sp" />
    </RelativeLayout>

</LinearLayout>